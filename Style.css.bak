/*CSS Document*/
*{
   margin:0px;
   padding:0px;
   font-family:"opem Sans";
}
#header div ul li {
	float:left;
	list-style:none;
	margin:20px;
}
#nav {
	margin-left:35%;
}
#nav ul li a {
	text-decoration: none;
	color:#fff;
	background-color:FF2C0F;
	padding:10px 20px 10px 30px;
	border-radius:5px;
	transition:0.5s box-shadow;
	
	
}
#nav ul li a:hover{ 
box-shadow:inset 0px 0px 5px 2px #000;
}
#logo {
	padding-bottom:10px ;
	position:absolute;
	width:100%;
	background-color:000;
	z-index:-1;
}
#img img{
	margin-top:47px;
	width:100%;
    height:120%;	
}
#active a{
	border-bottom:2px solid blue;
	
}
#nav ul ul{
	position:absolute;
	width:200px;
	z-index:99;
	margin-top:7px;

}
#nav ul ul li {
	display:none;
}

#nav ul li:hover ul li
{
	display:block;
} 

#nav ul ul li a{
	border-bottom:2px solid blue;
	display:inline-block;
	padding:0px;
	width:160px;
	text-align:center;
	padding-top:10px;
	padding-bottom:10px
	
	
}
#nav ul li li{
   margin-top:3px;
   margin-bottom;3px;
}

